{
  "deployment": {
    "remote_user": "deployer",
    "remote_port": "1224",
    "remote_destination": "/srv/www/nitelite.io",
    "repo": "https://git.nitelite.io/byronsanchez/nitelite.io/",
    "repo_branch": "master",
    "remote_path_env": "$PATH:/usr/local/bin:$HOME/.nodejs/bin",
    "server": "production.nitelite.io"
  },
  "baseUrl": "/",
  "editor": "vim",
  "post_ext": "html",
  "comment_ext": "md",
  "comments_author": "anonymous",
  "filenameTemplate": "/:file/index.html",
  "locals": {
    "application": "nitelite.io",
    "url": "https://nitelite.io",
    "base_url": "nitelite.io",
    "title": "nitelite.io",
    "subtitle": "Personal blog",
    "author": "niteLite",
    "description": "Personal blog",
    "comments_enabled": true,
    "ratings_enabled": true,
    "skills_enabled": true,
    "keys_enabled": true,
    "related_entries_limit": 5,
    "date_format_post": "dddd, MMMM Do, YYYY",
    "date_format_comment": "MMMM Do, YYYY h:mm A",
    "email": "byron@byronsanchez.io",
    "gravatar_url": "http://www.gravatar.com/avatar",
    "gravatar_size": 64,
    "gravatar_default": "identicon"
  },
  "plugins": [
    "./plugins/paginator.coffee",
    "./plugins/wintersmith-articles-helper.coffee",
    "./plugins/wintersmith-handleize-helper",
    "./plugins/wintersmith-tag-pages.coffee",
    "./plugins/wintersmith-robotskirt.coffee",
    "./plugins/related_posts.coffee",
    "./plugins/wintersmith-webpack.coffee"
  ],
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "jade": {
    "pretty": true
  },
  "most_popular_articles": {
    "limit": 5
  },
  "paginator": {
    "isEnabled": 1,
    "template": "layouts/index.jade",
    "perPage": 5
  },
  "articlesHelper": {
    "articles": "notebooks"
  },
  "robotskirt": {
    "extensions": ["ext_fenced_code", "ext_no_intra_emphasis", "ext_autolink", "ext_strikethrough", "ext_lax_spacing", "ext_superscript", "ext_tables"],
    "smart": true
  },
  "tagPages": {
    "perPage": 5,
    "template": "layouts/tags.jade",
    "filter": [
      "5 stars",
      "4 stars",
      "3 stars",
      "2 stars",
      "1 star",
      "creepypasta",
      "health",
      "mastery",
      "money",
      "music"
    ]
  },
  "pygments": true,
  "ignore": [
    "README.md",
    "README.org",
    "Gruntfile",
    "resources",
    "vendor",
    "scripts",
    "bin",
    "database"
  ]
}

